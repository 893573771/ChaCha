<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_we_chat_article"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ghy.chacha.activity.WeChatArticleActivity">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/we_chat_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorAppOrange"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        tl:tl_textsize="16sp"
        tl:tl_textBold="SELECT"
        tl:tl_indicator_margin_left="2dp"
        tl:tl_indicator_margin_right="2dp"
        tl:tl_indicator_style="TRIANGLE"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/we_chat_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
