<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_share_popup_window"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginLeft="@dimen/dimen_10"
        android:src="@mipmap/location_map"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_background_grey">

    <com.ghy.baseapp.view.WheelView
        android:id="@+id/province_wv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="#cccccc"/>

    <TextView
        android:id="@+id/oil_province_select_done"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:background="@drawable/btn_bg_selector_gray"
        android:gravity="center"
        android:textColor="@color/colorAppOrange"
        android:textStyle="bold"
        android:text="确定" />

</LinearLayout>