<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history_today_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ghy.chacha.activity.HistoryTodayDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dimen_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_his_tod_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_10"
                android:padding="@dimen/dimen_10"
                android:text="1111"
                android:textColor="@color/colorAppOrangeAlpha"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                app:cardBackgroundColor="@color/colorAppOrangeAlpha"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/tv_his_tod_detail_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:lineSpacingExtra="@dimen/dimen_4"
                    android:padding="@dimen/dimen_6"
                    android:text="1111"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
