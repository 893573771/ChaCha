<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/dimen_260"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_30"
        android:background="@drawable/my_dialog_background_white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dailog_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_80"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:id="@+id/view_tv_padding"
            android:layout_width="@dimen/dimen_0"
            android:layout_height="@dimen/dimen_70"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dailog_title_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="17dp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xiaoyi_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35"
                android:layout_weight="1"
                android:background="@drawable/btn_my_dialog_confirm_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:visibility="gone" />

            <View
                android:id="@+id/view_btn_cut"
                android:layout_width="@dimen/dimen_15"
                android:layout_height="@dimen/dimen_0"
                android:visibility="gone" />

            <TextView
                android:id="@+id/xiaoyi_cance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35"
                android:layout_weight="1"
                android:background="@drawable/btn_my_dialog_cancel_selector"
                android:gravity="center"
                android:text="取消"
                android:textColor="#fc8825"
                android:textSize="16dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/xiaoyi_cyp" />

</FrameLayout>