<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorAppOrangeAlpha">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.ghy.baseapp.component.labelview.LabelTextView
                    android:id="@+id/tv_his_tod_date"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:text="                        "
                    android:textColor="#ffffff"
                    app:label_backgroundColor="#72abf2"
                    app:label_distance="20dp"
                    app:label_orientation="LEFT_TOP"
                    app:label_text="2016"
                    app:label_textSize="12sp" />

                <TextView
                    android:id="@+id/tv_his_tod_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:padding="@dimen/dimen_15"
                    android:layout_marginLeft="-60dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/white"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_his_tod_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:padding="@dimen/dimen_6"
                android:ellipsize="end"
                android:textSize="14sp"
                android:lineSpacingExtra="@dimen/dimen_2"
                android:layout_marginTop="@dimen/dimen_5"
                android:textColor="@color/white"
                android:text="1111"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>