<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/skyblue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="天气/空气质量"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/home_fun1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/icon_mobile"
                    android:text="号码归属地"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black_alpha" />
                <View
                    android:layout_width="@dimen/dimen_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/common_view_grey"/>

                <TextView
                    android:id="@+id/home_fun2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/icon_environment"
                    android:text="空气质量"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black_alpha" />
                <View
                    android:layout_width="@dimen/dimen_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/common_view_grey"/>

                <TextView
                    android:id="@+id/home_fun3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/icon_idcard"
                    android:text="省份证查询"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/black_alpha" />
                <View
                    android:layout_width="@dimen/dimen_0.5"
                    android:layout_height="match_parent"
                    android:background="@color/common_view_grey"/>
                <TextView
                    android:id="@+id/home_fun4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:drawableTop="@mipmap/icon_history"
                    android:text="历史今天"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black_alpha" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/common_view_grey"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
